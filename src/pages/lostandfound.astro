---
import Layout from "../layouts/Layout.astro";
import StatusBadge from "../components/StatusBadge.astro";

// Mock data for now
const items = [
    {
        id: 1,
        name: "Red Scarf",
        location: "Near Fountain",
        date: "2026-02-14",
        status: "lost",
        image: null,
    },
    {
        id: 2,
        name: "Golden Locket",
        location: "Main Hall",
        date: "2026-02-13",
        status: "found",
        image: null,
    },
    {
        id: 3,
        name: "Love Note",
        location: "Library",
        date: "2026-02-14",
        status: "lost",
        image: null,
    },
];
---

<Layout>
    <main class="page-container">
        <div class="header-section">
            <h1 class="page-title">Lost & Found</h1>
            <p class="subtitle">
                Did you lose something precious? Or find a lost treasure?
            </p>

            <div class="actions">
                <a href="/report" class="btn-primary">
                    <span class="icon">‚ô°</span> Report an Item
                </a>
            </div>
        </div>

        <!-- Filter/Search Placeholder -->
        <div class="filters">
            <!-- Future: Search bar and toggles -->
        </div>

        <div class="items-grid">
            {
                items.map((item) => (
                    <div class="item-card">
                        <div class="image-area">
                            {item.image ? (
                                <img src={item.image} alt={item.name} />
                            ) : (
                                <div class="placeholder-img">
                                    <span class="heart-icon">‚ô°</span>
                                </div>
                            )}
                            <div class="badge-wrapper">
                                <StatusBadge
                                    status={item.status as "lost" | "found"}
                                />
                            </div>
                        </div>
                        <div class="content">
                            <h3>{item.name}</h3>
                            <p class="location">üìç {item.location}</p>
                            <p class="date">üìÖ {item.date}</p>
                            <button class="details-btn">View Details</button>
                        </div>
                    </div>
                ))
            }
        </div>
    </main>
</Layout>

<style>
    .page-container {
        padding: 2rem 1rem;
        max-width: 1200px;
        margin: 0 auto;
        font-family: "Quicksand", sans-serif;
    }

    .header-section {
        text-align: center;
        margin-bottom: 3rem;
    }

    .page-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        color: #5d1f3c; /* Text Dark */
        margin-bottom: 0.5rem;
        font-weight: 700;
        text-shadow: 2px 2px 0px rgba(255, 175, 204, 0.4);
    }

    .subtitle {
        font-size: 1.2rem;
        color: #8b2f5a; /* Text Medium */
        margin-bottom: 2rem;
    }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: #ff4d6d; /* Primary Rose Pink */
        color: white;
        padding: 0.8rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        text-decoration: none;
        box-shadow: 0 4px 15px rgba(255, 77, 109, 0.4);
        transition:
            transform 0.2s,
            box-shadow 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 77, 109, 0.6);
        background: #ff4d6d;
    }

    .items-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
    }

    .item-card {
        background: white;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05); /* Soft shadow */
        border: 2px solid #fff0f3; /* Soft Blush Border */
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .item-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(255, 77, 109, 0.15);
        border-color: #ffc8dd;
    }

    .image-area {
        height: 200px;
        background: #fff0f3;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .placeholder-img {
        font-size: 3rem;
        color: #ffafcc;
        opacity: 0.5;
    }

    .badge-wrapper {
        position: absolute;
        top: 1rem;
        right: 1rem;
    }

    .content {
        padding: 1.5rem;
        text-align: center;
    }

    .content h3 {
        color: #5d1f3c;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .content p {
        color: #8b2f5a;
        font-size: 0.95rem;
        margin-bottom: 0.25rem;
    }

    .details-btn {
        margin-top: 1rem;
        background: transparent;
        border: 2px solid #ff4d6d;
        color: #ff4d6d;
        padding: 0.5rem 1.2rem;
        border-radius: 20px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.2s;
    }

    .details-btn:hover {
        background: #ff4d6d;
        color: white;
    }
</style>
